{
	"name": "server",
	"version": "1.0.0",
	"private": true,
	"workspaces": {
		"nohoist": [
			"husky"
		]
	},
	"main": "index.js",
	"license": "MIT",
	"dependencies": {
		"eslint-plugin-jest": "^23.0.3",
		"express": "^4.17.1",
		"jest": "^24.9.0",
		"mariadb": "^2.1.2",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^5.21.2",
		"sequelize-typescript": "^1.0.0",
		"ts-jest": "^24.1.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.2",
		"@types/validator": "^10.11.3",
		"@typescript-eslint/eslint-plugin": "^2.7.0",
		"@typescript-eslint/parser": "^2.7.0",
		"eslint": "^6.6.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"husky": "^3.0.9",
		"prettier": "^1.19.1",
		"ts-node": "^8.5.0",
		"typescript": "^3.7.2"
	},
	"scripts": {
		"start:prod": "node bin/www.js",
		"start:dev": "nodemon",
		"start:docker": "docker-compose -f server.dev.compose.yml up -d",
		"build": "tsc",
		"format": "prettier --write \"**/*.{ts,js,css,md}\"",
		"lint": "tsc --noEmit && eslint . --cache --ext .ts,.tsx",
		"lint:fix": "tsc --noEmit && eslint . --cache --fix --ext .ts,.tsx",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{ts,js,css,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts,tsx,js,jsx}": [
			"eslint --fix",
			"git add"
		]
	}
}
