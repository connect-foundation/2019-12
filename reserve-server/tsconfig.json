{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "pretty": true,
    "rootDir": "./",
    "outDir": "dist",
    "baseUrl": "./src",
    "lib": ["esnext"],
    "paths": {
      "*": ["node_modules/*"],
      "app": ["app"],
      "env": ["env"],
      "common/*": ["common/*"],
      "models": ["models"],
      "routes/*": ["routes/*"],
      "services": ["services"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*", "bin"],
  "exclude": ["node_modules"]
}
